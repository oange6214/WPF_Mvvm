<Window x:Class="WPF_Mvvm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Mvvm" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <Binding Path="MainViewModel" Source="{StaticResource Locator}"/>
    </Window.DataContext>
    
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <DockPanel LastChildFill="False">
                <TextBox DockPanel.Dock="Left" Width="150" Height="30" Text="{Binding SearchText, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
                <Button DockPanel.Dock="Right" Width="30" Height="30" Command="{Binding SearchCommand}">
                    <Viewbox Margin="5">
                        <Path Fill="Black" Stretch="Uniform"
                              Data="{Binding Source={StaticResource Locator}, Path=IconSource.Search}"/>
                    </Viewbox>
                </Button>
            </DockPanel>
            
            <TextBlock Text="{Binding SearchText}"/>
        </StackPanel>
    </Grid>
</Window>

